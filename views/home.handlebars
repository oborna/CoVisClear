<div class="row justify-content-center pt-5 pb-4">
    <div class="col-8 text-center">
        <h2 class="py-2">Visualize COVID-19 cases in the United States.</h2>
        <h2 class="py-2">Enter a city and state below.</h2>
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6 text-center">
        <form method="GET" action="/main-input-handler">
            <div class="form-group">
                <input class="form-control form-control-lg py-2 my-3" type="text" name="location" placeholder="e.g., Corvallis, OR" required>
                <button type="submit" class="btn btn-lg btn-secondary py-2 my-3">Search</button>
            </div>
        </form>
    </div>
</div>
